  <main class="flex items-center justify-between">
    <img
      class="w-[450px] mb-3 rounded-full shadow-lg animate-left-opacity mr-24"
      src="/profile.jpg"
      alt="Profile"
    />
    <div class="instructions scale-in-ver-center">
      <div class="flex items-center gap-6">
        <a href="mailto:bastiangperez@gmail.com">
          <button title="Send email">
            <svg
              class="w-10 text-black transition duration-75 dark:text-gray-400 hover:text-gray-700 dark:group-hover:text-white"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="currentColor"
              viewBox="0 0 22 21"
              ><path
